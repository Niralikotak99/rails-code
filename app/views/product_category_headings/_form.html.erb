<%= form_with(model: product_category_heading) do |form| %>
  <% if product_category_heading.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product_category_heading.errors.count, "error") %> prohibited this heading from being saved:</h2>

      <ul>
        <% product_category_heading.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :category_name %>
    <%= form.text_field :category_name, class: "form-control col-sm-2" %>
  </div>

  <h3>Add Product categories</h3>
  <%= form.fields_for :product_categories do |product_category| %>
    <%= render 'product_category_fields', f: product_category %>
  <% end %>
  <div class="links">
    <%= link_to_add_association 'Add Product Category', form, :product_categories %>
  </div>
  <div class="actions">
    <%= form.submit class:"btn btn-primary"%>
  </div>
<% end %>

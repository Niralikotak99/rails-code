<h1><%= @product_category.category_name %></h1>

<%= link_to 'Add product', new_product_category_product_path(@product_category),  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: 'btn btn-primary btn-lg'}  %>
<div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content"></div>
  </div>
</div>
<br><br>
<h4>Products</h4>
<% @product_category&.products&.each do |product| %>
  <%= product.pname %>  |
  <%= link_to 'Edit', edit_product_category_product_path(@product_category, product) %>  |
    <%= link_to 'Destroy', product_category_product_path(@product_category, product), method: :delete, data: { confirm: 'Are you sure?' } %> 
    <br>
<% end %>

<% if current_user.present? %>
	<h4>Welcome <%= current_user.name %> !!   <%= link_to 'Edit', edit_user_registration_path %></h4>
	<%= link_to 'Check product categories', product_category_headings_path %>  |
	<%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
<% else %>
		<h2>Need to Log In or Sign Up to continue!!</h2>
		<%= link_to 'Sign Up', new_user_registration_path, :class => "btn" %>  |
		<%= link_to 'Log In', new_user_session_path, :class => "btn" %>   
<% end %>